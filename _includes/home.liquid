---
layout: base.liquid
---

<section class="intro">
    <h1>{{pageTitle}}</h1>
    <div>{{content}}</div>
</section>

<section class="filter-wrapper">
    <ul class="filters">
        <li><a href="">Books</a></li>
        <li><a href="">Articles</a></li>
        <li><a href="">Courses</a></li>
        <li><a href="">Tools</a></li>
        <li><a href="">All resources</a></li>
    </ul>
</section>

<ul class="resources">
    {% for resource in collections.resources %}
        <li class="resource">
            <ul>
                <li><a href="{{resource.data.link}}">{{resource.data.title}}</a></li>
                <li>
                    by
                    {% for author in resource.data.authors %}
                        <span>{{author}}</span>
                    {% endfor %}
                </li>
                <!-- <li>
                    {% for category in resource.data.categories %}
                        <span>{{category}}</span>
                    {% endfor %}
                </li> -->
                <li>{{resource.data.type}}</li>
            </ul>
        </li>
    {% endfor %}
</ul>